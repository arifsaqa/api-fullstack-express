<%- include ("../../partials/header.ejs") %>
  <%- include ("../../partials/navbar.ejs") %>
    <%- include ("../../partials/sidebar.ejs") %>
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
          <div class="container-fluid">
            <div class="row mb-2">
              <div class="col-sm-6">
                <h1>Nominal</h1>
              </div>
              <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                  <li class="breadcrumb-item"><a href="/">Home</a></li>
                  <li class="breadcrumb-item"><a href="/nominal">Nominal</a></li>
                  <li class="breadcrumb-item active">
                    <% if(typeof nominal!='undefined') { %>
                      Edit
                    <% } else { %>
                      Create
                    <% } %>   
                  </li>
                </ol>
              </div>
            </div>
          </div><!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">
          <div class="container-fluid">
            <div class="row">
              <div class="col-12">
                <div class="card card-primary">
                  <div class="card-header">
                    <% if(typeof nominal!='undefined') { %>
                      Edit Nominal <%= nominal.name %>
                    <% } else { %>
                      Create
                    <% } %>    
                    </h3>
                  </div>
                  <!-- /.card-header -->
                  <!-- form start -->
                  <form 
                    
                    <% if(typeof nominal!='undefined') { %>
                      action="/nominal/update/<%= nominal._id %>?_method=PUT"
                    <% } else { %>
                      action="/nominal/store"
                    <% } %>    
                    method="post"
                  >
                    <div class="card-body">
                      <div class="form-group">
                        <label>Nama</label>
                        <select class="form-control select2" style="width: 100%;" name="cointName">
                          <option selected="selected">Select </option>
                          <% if (typeof nominal!='undefined') { %>
                            <option value="Gold" <%= nominal.cointName == "Gold" && 'selected'%> >Gold</option>
                            <option value="Diamond" <%= nominal.cointName == "Diamond" && 'selected'%> >Diamond</option>
                            <option value="Jewel" <%= nominal.cointName == "Jewel" && 'selected'%> >Jewel</option>
                          <% } else {%>
                            <option value="Gold" >Gold</option>
                            <option value="Diamond" >Diamond</option>
                            <option value="Jewel" >Jewel</option>
                          <% } %>
                        </select>
                      </div>
                      <!-- <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" name="qointName" class="form-control" id="qointName" placeholder="Enter name" required
                        <% if (typeof nominal!='undefined') { %>
                          value="<%= nominal.qointName %>"
                        <% } %>
                          >
                      </div> -->
                       <div class="form-group">
                        <label for="cointQuantity">Quantity</label>
                        <input type="number" name="cointQuantity" class="form-control" id="cointQuantity" placeholder="Enter quantity" required
                        <% if (typeof nominal!='undefined') { %>
                          value="<%= nominal.cointQuantity %>"
                        <% } %>
                          >
                      </div>
                       <div class="form-group">
                        <label for="price">Price</label>
                        <input type="text" name="price" class="form-control" id="price" placeholder="Enter price" required
                        <% if (typeof nominal!='undefined') { %>
                          value="<%= nominal.price %>"
                        <% } %>
                          >
                      </div>
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer">
                      <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                  </form>
                </div>
              </div>
              <!-- /.col -->
            </div>
            <!-- /.row -->
          </div>
          <!-- /.container-fluid -->
        </section>
        <!-- /.content -->
      </div>
      <%- include ("../../partials/footer.ejs") %>
        <%- include ("../../partials/js.ejs") %>