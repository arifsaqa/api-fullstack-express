<!-- server side render -->
<% if(alert.message.length > 0) { %>
  <div class="alert alert-<%=alert.status%> alert-dismissible">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
    <%= alert.message %>
  </div>
<%}%>

<!-- for success ajax request -->
<div class="alert alert-success alert-dismissible d-none" id="ajaxSuccess">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
  <span id="successMessage"></span>
</div>

<!-- for error ajax request -->
<div class="alert alert-danger alert-dismissible d-none" id="ajaxError">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
  <span id="errorMessage"></span>
</div>